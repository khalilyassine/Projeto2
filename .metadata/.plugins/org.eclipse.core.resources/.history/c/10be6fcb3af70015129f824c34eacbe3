package modelo.tests_portas;

import org.junit.Assert;
import org.junit.Test;

import modelo.*;

public class TestAndGate {

	@Test
	public void test1And1() {
		Switch s = new Switch();
		AndGate and = new AndGate();
		
		InputPin A = and.getInputPin(0);
		InputPin B = and.getInputPin(1);
		
		s.set1();
		
		A.setSource(s);
		B.setSource(s);
		
		and.setPinA(A);
		and.setPinB(B);
		
		boolean Saida = and.getOutputValue(0);
		
		Assert.assertTrue(Saida);
		
	}
	public void test0And1(){
		Switch s = new Switch();
		AndGate and = new AndGate();
		
		InputPin A = and.getInputPin(0);
		InputPin B = and.getInputPin(1);
		
		s.set0();
		A.setSource(s);
		
		s.set1();
		B.setSource(s);
		
		and.setPinA(A);
		and.setPinB(B);
		
		boolean Saida = and.getOutputValue(0);
		
		Assert.assertTrue(Saida);
			
	}
	
	public void test1And0(){
		Switch s = new Switch();
		AndGate and = new AndGate();
		
		InputPin A = and.getInputPin(0);
		InputPin B = and.getInputPin(1);
		
		s.set1();
		A.setSource(s);
		
		s.set0();
		B.setSource(s);
		
		and.setPinA(A);
		and.setPinB(B);
		
		boolean Saida = and.getOutputValue(0);
		
		Assert.assertTrue(Saida);
			
	}
	public void test0And0(){
		Switch s = new Switch();
		AndGate and = new AndGate();
		
		InputPin A = and.getInputPin(0);
		InputPin B = and.getInputPin(1);
		
		s.set0();
		A.setSource(s);
		B.setSource(s);
		
		and.setPinA(A);
		and.setPinB(B);
		
		boolean Saida = and.getOutputValue(0);
		
		Assert.assertTrue(Saida);
			
	}
	

}
