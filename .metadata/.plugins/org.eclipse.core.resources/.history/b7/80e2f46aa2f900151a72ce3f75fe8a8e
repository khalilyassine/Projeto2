package visao;

import java.awt.GridLayout;

import java.awt.*;

import java.awt.event.*;

import javax.swing.*;

public class TestFrameExample {

	public static void main(String[] s) {

		JFrame frame = new JFrame("JFrame Example");

		JPanel panel = new JPanel();
		
		panel.setLayout(null);
		
		/* Visual da Porta AND */
		JButton button_and = new JButton();
		Dimension size = button_and.getPreferredSize();
		
		button_and.setText("Porta AND");
		panel.add(button_and);
		button_and.setBounds(300 , 0,
	             size.width, size.height);
		
		/*Visual da Porta OR*/
		JButton button_or = new JButton();
		
		button_or.setText("Porta OR");
		panel.add(button_or);
		button_and.setBounds(200 , 0,
	             size.width, size.height);
		
		
		panel.setSize(200,200);
		frame.add(panel);
		frame.setSize(400, 400);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		
			

	}

}